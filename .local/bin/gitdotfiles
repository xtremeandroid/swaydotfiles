#!/bin/bash

cd ~/gitRepos
rm -rf swaydotfiles
git clone https://github.com/xtremeandroid/swaydotfiles

cd ~/.config
cp -vr brave-flags.conf chrome-flags.conf chromium-flags.conf code-flags.conf electron-flags.conf dunst gammastep gtk-3.0 gtk-4.0 kitty mpd mpv sway swaylock waybar wlogout fuzzel ~/gitRepos/swaydotfiles/.config

cd
cp -vr .xinitrc .zprofile .zshrc ~/gitRepos/swaydotfiles/
cp -vr .local/bin ~/gitRepos/swaydotfiles/.local/

cd ~/gitRepos/swaydotfiles/
code .
